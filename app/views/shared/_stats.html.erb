<%# @user ||= current_user %>
<div class="stats">
  <% if @user %>
      <%= link_to following_user_path(@user) do %>
        <span>Following:</span>
        <strong><%= @following_count %></strong>
      <% end %>


      <%= link_to followers_user_path(@user) do %>
        <span>Followers:</span>
        <strong><%= @follower_count %></strong>
      <% end %>
  <% else %>
      <a href="/following">
          <span>Following:</span>
          <strong><%= @following_count %></strong>
      </a>

      <a href="/followers">
        <span>Followers:</span>
        <strong><%= @follower_count %></strong>
      </a>
      <% end %>
</div>