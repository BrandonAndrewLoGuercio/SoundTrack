<% c = Comment.new
   c.post_id = post.id
    c.user = post.user %>

  <%=  form_for [post, c]  do |f| %>
    <div class="form-group">
      <%= f.label :comment %>
      <%= f.text_field :comment %>
      <%= f.hidden_field :user_id, value: current_user.id %>

      <%= f.submit(class: "btn btn-primary") %>
    </div>
<% end %>

