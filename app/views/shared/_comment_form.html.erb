<% c = Comment.new
   c.post_id = post.id
    c.user = post.user %>

  <%=  form_for [post, c], remote: true, include_id: false, html:{class: 'comment_form'}  do |f| %>
    <div class="form-group">
      <%= f.label :comment %>
      <%= f.text_field :comment, class: "form-control", include_id: false, placeholder: "Write comment" %>
      <% if user_signed_in? %>
        <%= f.hidden_field :user_id, value: current_user.id %><br/>
      <% end %>
      <%= f.submit(class: "new-comment btn btn-primary") %>
    </div>
<% end %>

