<% c = Comment.new
   c.post_id = post.id
    c.user = post.user %>

  <%=  form_for [post, c], remote: true  do |f| %>
    <div class="form-group">
      <%= f.label :comment %>
      <%= f.text_field :comment, class: "form-control", placeholder: "Write comment" %>
      <%= f.hidden_field :user_id, value: current_user.id %><br/>
      <%= f.submit(class: "btn btn-primary") %>
    </div>
<% end %>

