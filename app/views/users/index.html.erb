<!doctype html>
<html lang="en">



  <head>
    <meta charset="utf-8">
    <title>Users</title>
  </head>

  <body>
  <div class="container-fluid">
    <div class="jumbotron">
      <%= render 'shared/search' %>
    </div>

  <ul>
      <% @users.each do |user|%>
        <li>
          <%= image_tag user.avatar_url(:thumb) %>
          <%= link_to user.username, user_path(user) %>
          <%= follow_or_unfollow_button user %>
      <% end %>
    </ul>
      </div>
  </body>
</html>