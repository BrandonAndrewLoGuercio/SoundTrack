<div id="comment">
    <%= image_tag comment.user.avatar_url(:thumb) %>
    <%= link_to comment.user.username, user_path(comment.user.id) %>
    <%= comment.created_at.to_formatted_s(:long) if comment.created_at %><br>
    <%= comment.comment %><br>
    <% if comment.user == current_user || comment.post.user == current_user %>
      <%= link_to 'Delete Comment', [comment.post], method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
</div>



